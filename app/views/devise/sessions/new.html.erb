<%= image_tag "sneakers-logo.png", :id=>"brand_image" %>

<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
  
  <div class="clearfix">
    <%= f.label :email %>
    <div class="input">
      <%= f.email_field :email, :class=>"xlarge" %>
    </div>
  </div>

  <div class="clearfix">
    <%= f.label :password %>
    <div class="input">
      <%= f.password_field :password, :class=>"xlarge" %>
    </div>
  </div>

  <% if devise_mapping.rememberable? -%>
  <div class="clearfix">
      <% #= f.label :remember_me
      %>
      <div class="input">
        <%= f.check_box :remember_me %> &nbsp; Remember me
      </div>
    </div>
  <% end -%>

  <div class="input">
    <%= f.submit "Sign in", :class => "btn primary" %>
    <%= link_to "Sign up", new_registration_path(resource_name), :id => "sign_up_button" %><br />
  </div>
  
<% end %>

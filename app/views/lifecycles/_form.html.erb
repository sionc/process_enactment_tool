<% content_for(:head) do %>
    <%= javascript_include_tag "jquery.validate.min", "lifecycle_validation" %>
<% end %>

<%= form_for(@lifecycle, :html => {:id => "lifecycle_form"}) do |f| %>
    <% if @lifecycle.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@lifecycle.errors.count, "error") %> prohibited this lifecycle from being saved:</h2>

          <ul>
            <% @lifecycle.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <div class="clearfix">
      <%= f.label :name %>
      <div class="input">
        <%= f.text_field :name, :class=>"xlarge" %>
      </div>
    </div>
    <div class="clearfix">
      <%= f.label :description %>
      <div class="input">
        <%= f.text_area :description, :size => "40x10", :class=>"xlarge" %>
      </div>
    </div>
    <div class="input">
      <%= f.submit "Create", :class => "btn primary" %>
      <%= link_to 'Cancel', lifecycles_path, :class => "btn danger" %>
    </div>
<% end %>

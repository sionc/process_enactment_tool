<%= form_for(@project) do |f| %>
  <% if @project.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@project.errors.count, "error") %> prohibited this project from being saved:</h2>

      <ul>
      <% @project.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="clearfix">
    <%= f.label :name %>
	<div class="input">
		<%= f.text_field :name, :class=>"xlarge" %>
	</div>
  </div>
  <div class="clearfix">
	<%= f.label :Lifecycle_type %>
	<div class="input">
		<%= collection_select :project, :lifecycle_id, @lifecycles, :id, :name, :class=>"xlarge" %>
	</div>
  </div>
  <div class="clearfix">
    <%= f.label :description %>
	<div class="input">
    	<%= f.text_area :description, :size => "40x10", :class=>"xlarge" %>
	</div>
  </div>
  <div class="input">
    <%= f.submit "Create", :class => "btn primary" %>
	<%= link_to 'Cancel', projects_path, :class => "btn danger" %>
  </div>
<% end %>

<% content_for(:head) do %>
    <%= javascript_include_tag "custom.js" %>
<% end %>

<p id="notice"><%= notice %></p>

<p>
  <b>Name:</b>
  <%= @project.name %>
</p>

<p>
  <b>Description:</b>
  <%= @project.description %>
</p>

<h1>Project Phases</h1>
<table border="0" id="project_phases">
  <thead>
  <tr>
    <th>Sequence #</th>
    <th>Name</th>
    <th>Description</th>
    <th>Estimated Effort</th>
  </tr>
  </thead>
  <tbody>
  <% @project.lifecycle_phases.ordered_list.each do |phase| %>
      <tr>
        <td><%= phase.sequence_number %></td>
        <td><%= phase.name %></td>
        <td><%= phase.description %></td>
        <td>9999999</td>
      </tr>
  <% end %>
  </tbody>
</table>

<br/>

<div id="project_phase_details_container">
  <h1>Project Phase Details</h1>
  <table border="0" id="project_phase_details">
    <tbody>
    <tr>
      <td>Description</td>
      <td id="project_phase_description">Replace Me</td>
    </tr>
    <tr>
      <td>Sequence Number</td>
      <td id="project_phase_sequence_number">Replace Me</td>
    </tr>
    <tr>
      <td>Estimated Effort</td>
      <td id="project_phase_estimated_effort">Replace Me</td>
    </tr>
    <tr>
      <td>Deliverables</td>
      <td id="project_phase_deliverables">Replace Me</td>
    </tr>
    </tbody>
  </table>
</div>

<br/>

<div>
  <%= link_to 'New Deliverable', new_deliverable_path(:project_phase_id => 19), :class => "stylized" %>
</div>
<br/>
<br/>
<%= link_to 'Cancel', projects_path, :class => "stylized" %>

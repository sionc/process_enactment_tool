<h1>Editing user</h1>

<%= form_for(@user) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <br/>

  <div class="clearfix">
    <%= f.label :email %>
     <div class="input">
     <%= f.text_field :email, :class=>"xlarge" %>
    </div>
  </div>
  
  <!--% if can? :read, Role %-->
        <div class="clearfix">
         <label>Roles</label>
  		  <% @roles.each do |r| %>
  		  <li class="role_item">
  		    <% has_role = @user.roles.first == r %>
          <%= f.radio_button :role, r.id, :checked => has_role %>
          <%= f.label r.name, r.name %>
        </li>  
        <% end %>
        </div>
  <!--% end %-->

 <br/>
 <div class="input">
   <%= f.submit :class=>"btn primary" %>
   &nbsp;
   <%= link_to 'Cancel', users_path, :class => "btn danger" %>
 </div>

<% end %>

